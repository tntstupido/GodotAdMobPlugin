<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourcompany.admobplugin">

    <!-- AdMob requires internet access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--
        AdMob App ID is injected by the Godot export plugin at build time.
        If you want to hardcode for standalone testing, uncomment below
        and replace with your actual app id.

    <application>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>
    -->

</manifest>
